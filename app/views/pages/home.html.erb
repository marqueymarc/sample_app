<h1>Kara My Darling</h1>
<% if signed_in? %>
    <table class="front inner_round" summary="For signed-in users">
      <tr>
        <td>
          <table>
            <tr>
              <td class="main">
                <h1>What's up?</h1>
                <%= render 'shared/flash' %>
                <%= render 'shared/error_messages', :object =>@micropost %>
                <%= render 'shared/micropost_form' %>

              </td>
              <td class="sidebar round">
                <%= render 'shared/user_info' %>
              </td>
            </tr>
          </table>
          <table>
            <%= render :partial => "shared/feed_items" %>
          </table>
        </td>
      </tr>
    </table>

<% else %>
    <p>
      This is a sample home page using the
      <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
    </p>
    <%= link_to "Sign up now!", signup_path, :class => "signup_button_round" %>
<% end %>

]