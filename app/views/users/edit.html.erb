<div class="inner_round">
  <h2>Edit user</h2>
  <%= form_for @user do |f| %>
      <%= render 'shared/flash' %>
      <%= render 'shared/error_messages', :object => f.object %>
      <div class="field">
        <%= f.label :name %> <br/>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :email %> <br/>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.label :password %> <br/>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.label :password_confirmation %> <br/>
        <%= f.password_field :password_confirmation %>
      </div>
      <div class="actions">
        <%= f.submit "Update" %>
      </div>
      <div>
        <%= gravatar_for(@user) %>
        <%= link_to "Change", "http://gravatar.com/emails" %>
      </div>
  <% end %>
</div>
